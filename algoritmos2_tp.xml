	<Aplicacion herramienta="exiftool">
		<SubApp nombre="exiftoolSub1">
			<Parametro 	contenido="exiftoolParam1"
						tipo="obligatorio" />
			<Parametro 	contenido="exiftoolParam2"
						tipo="obligatorio" />
		</SubApp>
		<SubApp nombre="exiftoolSub2">
			<Parametro 	contenido="exiftoolParam3"
						tipo="obligatorio" />
