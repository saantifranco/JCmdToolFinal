		<SubApp nombre="pull" />
		<SubApp nombre="add" />
		<SubApp nombre="revert"
				usoReal="revert">
			<Parametro 	prefijo="unPrefijo"
						contenido="hash_commit" 
						tipo="obligatorio" />
		</SubApp>
