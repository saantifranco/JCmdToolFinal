	<Aplicacion herramienta="git">
		<SubApp nombre="commit">
			<Parametro 	contenido="nombre_rama"
						tipo="obligatorio" />
			<Parametro contenido="mensaje" tipo="opcional" cotaMin="0"
				cotaMax="250" />
		</SubApp>
		<SubApp nombre="push">
			<Parametro 	contenido="nombre_rama"
						tipo="obligatorio" />
			<Parametro 	contenido="usuario"
						tipo="obligatorio" />
			<Parametro 	contenido="password"
						tipo="obligatorio"
						cotaMin="6" 
						cotaMax="12" />
		</SubApp>
		<SubApp nombre="fetch" />
		<SubApp nombre="merge">
			<Parametro	contenido="nombre_rama"
						tipo="obligatorio" />
		</SubApp>
		<SubApp nombre="pull" />
		<SubApp nombre="add" />
		<SubApp nombre="revert">
			<Parametro 	contenido="hash_commit" 
						tipo="obligatorio" />
		</SubApp>
	</Aplicacion>
