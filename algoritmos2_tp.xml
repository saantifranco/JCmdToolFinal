						contenido="password"
						tipo="obligatorio"
						cotaMin="6" 
						cotaMax="12" />
		</SubApp>
		<SubApp nombre="fetch" />
		<SubApp nombre="merge">
			<Parametro	prefijo="unPrefijo"
						contenido="nombre_rama"
						tipo="obligatorio" />
