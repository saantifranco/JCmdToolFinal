	<Aplicacion herramienta="git">
		<SubApp nombre="commit"
				usoReal="commit">
			<Parametro 	prefijo="unPrefijo"
						contenido="nombre_rama"
						tipo="obligatorio" />
			<Parametro  prefijo="-m"
						contenido="mensaje" 
						tipo="opcional" 
						cotaMin="0"
						cotaMax="250" />
		</SubApp>
		<SubApp nombre="push"
				usoReal="push">
			<Parametro 	prefijo="unPrefijo"
						contenido="nombre_rama"
						tipo="obligatorio" />
			<Parametro 	prefijo="unPrefijo"
						contenido="usuario"
						tipo="obligatorio" />
