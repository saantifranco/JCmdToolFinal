	<Aplicacion herramienta="virtualdub">
		<SubApp nombre="virtualdubSub1">
			<Parametro 	contenido="virtualdubParam1"
						tipo="obligatorio" />
			<Parametro 	contenido="virtualdubParam2"
						tipo="obligatorio" />
		</SubApp>
		<SubApp nombre="virtualdubSub2">
			<Parametro 	contenido="virtualdubParam3"
